<div class="container form text-center">
    <h1>Add Issue</h1>
    <form action="/project/<%= projectId %>/issue" method="post">
        <input class="form-control mt-5" type="text" name="name" placeholder="Issue Name">
        <textarea class="form-control my-3" rows="6" name="description" placeholder="Issue Description"></textarea>
        <button class="btn btn-block btn-success" type="submit">Add</button>
    </form>
</div>

