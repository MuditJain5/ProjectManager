<%- include('./partials/header.ejs'); -%>

<div class="container pt-4">

    <div class="d-flex justify-content-between align-items-center mr-5 pr-5">
        <div>
            <a href="/projects"><i class="fas fa-arrow-left"></i> Back to Projects</a>
            <h1 class="mt-4"><%= project.name %></h1>
            <% var x = new Date(project.createdAt); x = x.toDateString() %>
            <p class="mb-5">- by <%= project.author.username %> | <%= x %></p>
        </div>
        
        <a type="button" class="btn btn-info" href="/project/<%= project._id %>/issue/add">Add Issue</a>
    
    </div>

    <div class="border-bottom border-dark mb-3 tab-button pb-0">
        <a type="button" class="btn" href="/project/<%= project._id %>">Description</a>
        <a type="button" class="btn btn-dark rounded-0 rounded-top" >Issues</a>
        <a type="button" class="btn" href="/project/<%= project._id %>/updates">Updates</a>
    </div>
    <% issues.forEach((issue) => { %>
        <% if(issue.project.id.equals(project._id)){ %>
            <div class="bg-white py-4 px-5 m-2">
                <h3><%= issue.name %></h3> 
                <div class="d-flex justify-content-between align-items-center">
                    <p>- <%= issue.author.username %> </p>
                    <% var x = new Date(issue.createdAt); x = x.toDateString() %>
                    <p>Created <%= x %></p>
                    <a href="/project/<%= project._id %>/issue/<%= issue._id %>"><button class="btn btn-success">Details</button></a>
                </div>
                
            </div>
    <%   }}) %>
</div>

